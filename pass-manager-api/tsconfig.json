{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es6"],
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
